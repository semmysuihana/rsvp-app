# ================================
# ENVIRONMENT EXAMPLE (SAFE)
# ================================
# File ini adalah template. Tidak boleh berisi password asli.
# Buat file `.env` lalu isi dengan kredensial asli kamu.

# =================================
# Database (Prisma)
# Format URL:
# postgresql://USER:PASSWORD@HOST:PORT/DBNAME
# =================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME"

# =================================
# NextAuth
# NEXTAUTH_SECRET harus string random panjang (32+ chars)
# =================================
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://YOUR_DOMAIN_OR_IP"


# =================================
# Cloudflare Turnstile
# =================================
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-public-site-key"
TURNSTILE_SECRET_KEY="your-secret-key"


# =================================
# Upstash Rate Limiting
# =================================
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"
